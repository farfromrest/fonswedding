/*
 *= require reset
 *= require seating
 */

@import 'colors';
@import 'vars';
@import 'fonts';
@import 'mixins';

@import 'form';

body {
  background: linear-gradient(to right, $brown, $white, $brown);
  font-family: 'Breathe';
  color: $black;
  font-size: 25px;

  @media #{$phone} {
    font-size: 18px;
  }
}

strong {
  color: $jellay;
  font-weight: bold;
}

.wrapper {
  @include background-image('flower', 'png');
  background-size: 171px 79px;
  background-repeat: no-repeat;
  background-position: 50% -20px;
  padding-top: 100px;
  padding-bottom: 250px;
  text-align: center;
  min-height: 100vh;
  max-width: 600px;
  margin: 0 auto;
  position: relative;

  @media #{$phone} {
    padding-bottom: 60vw;
    padding-left: 1em;
    padding-right: 1em;
  }
}

.error {
  color: $red;
  padding: 1.5em 0;
}

.welcome-header {
  @include background-image('hearts', 'png');
  background-size: 85px 47px;
  background-repeat: no-repeat;
  background-position: 50% 0;
  padding-top: 80px;
}

.title,
.smaller-title,
.form-title,
.date {
  font-family: 'BlingtasticScript';
}

.title {
  font-size: 3em;
  color: $jellay;

  .divider {
    color: $black;
  }

  .peanut-butter {
    color: $peanut-butter;
  }
}

.smaller-title {
  font-size: 2em;
}

.form-title {
  font-size: 1.5em;
  line-height: 1.5;
}

.date {
  background-image: image-url('left-leaf.svg'), image-url('right-leaf.svg');
  background-size: 33px auto;
  background-repeat: no-repeat;
  background-position: 0 44%, 100% 44%;
  font-size: 1.5em;
  letter-spacing: 3.8px;
  display: inline-block;
  padding: 1em 50px;
}

.longer-text,
.text {
  padding: 1em 0;
  line-height: 1.25;

  a {
    text-decoration: underline;
  }

  &.note {
    color: lighten($black, 35%);
  }

  @media #{$phone} {
    font-size: 0.75em;
  }
}

.text {
  letter-spacing: 1.5px;
}

.rsvp-by-date {
  padding-bottom: 0.25em;
}

.longer-text {
  font-family: Helvetica;
  font-size: 0.8em;
  padding: 2em 0;
}

.address {
  .smaller-title {
    padding: .5em 0 0;
  }
  .text {
    padding: 0.25em 0 1em;
  }
}

.note {
  padding-top: 40px;
}

.home-link {
  background-size: auto 20px;
  background-repeat: no-repeat;
  background-position: right center;
  background-image: image-url('bee.svg');
  font-size: 0.8em;
  line-height: 30px;
  padding-right: 30px;
  display: block;
  position: absolute;
  top: 0;
  right: 0;
}

.bee,
.bee2 {
  background-size: auto 30px;
  background-repeat: no-repeat;
  background-position: bottom center;
  padding-bottom: 2em;
}

.bee {
  background-image: image-url('bee.svg');
  padding-top: 0;
}

.bee2 {
  background-image: image-url('bee2.svg');
}

.details-link {
  display: block;
  margin-top: 1em;
  text-decoration: underline;
  color: $tan;
}

.bride-and-groom {
  @include background-image('peanut-jellay', 'png');
  background-size: auto 200px;
  background-repeat: no-repeat;
  background-position: 50% 100%;
  display: block;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 200px;

  @media #{$phone} {
    width: calc(100% - 2em);
    background-size: 90% auto;
    height: 50vw;
  }
}

.banana-man {
  @include background-image('banana-man', 'png');
  background-size: 400px auto;
  background-repeat: no-repeat;
  background-position: top center;
  display: block;
  padding-top: 400px;
}
