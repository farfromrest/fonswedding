/*
 *= require reset
 */

@import 'colors';
@import 'vars';
@import 'fonts';
@import 'mixins';

body {
  background: linear-gradient(to right, $brown, $white, $brown);
  font-family: 'Breathe';
  color: $black;
  font-size: 25px;

  @media #{$phone} {
    font-size: 18px;
  }
}

strong {
  color: $jellay;
  text-decoration: underline;
}

.wrapper {
  @include background-image('flower', 'png');
  background-size: 171px 79px;
  background-repeat: no-repeat;
  background-position: 50% -20px;
  padding-top: 100px;
  padding-bottom: 250px;
  text-align: center;
  min-height: 100vh;
  max-width: 600px;
  margin: 0 auto;
  position: relative;

  @media #{$phone} {
    padding-bottom: 60vw;
    padding-left: 1em;
    padding-right: 1em;
  }
}

.error {
  color: $red;
  padding: 1.5em 0;
}

.welcome-header {
  @include background-image('hearts', 'png');
  background-size: 85px 47px;
  background-repeat: no-repeat;
  background-position: 50% 0;
  padding-top: 80px;
}

.title,
.smaller-title,
.date {
  font-family: 'BlingtasticScript';
}

.title {
  font-size: 3em;
  color: $jellay;

  .divider {
    color: $black;
  }

  .peanut-butter {
    color: $peanut-butter;
  }
}

.smaller-title {
  font-size: 2em;
}

.date {
  background-image: image-url('left-leaf.svg'), image-url('right-leaf.svg');
  background-size: 33px auto;
  background-repeat: no-repeat;
  background-position: 0 44%, 100% 44%;
  font-size: 1.5em;
  letter-spacing: 3.8px;
  display: inline-block;
  padding: 1em 50px;
}


.text {
  padding: 1em 0;
  line-height: 1.25;
  letter-spacing: 1.5px;

  a {
    text-decoration: underline;
  }

  @media #{$phone} {
    font-size: 0.75em;
  }
}

.form-field-row {
  padding: 0 0 0.5em 0;
}

.label {
  color: $tan;
}

.name-field {
  color: $black;
  border: 2px solid $tan;
  width: 10em;
  padding: 0.25em;
  background-color: $white;
  border-radius: 0.5em;
  text-indent: 0.25em;
  &::-webkit-input-placeholder {
    color: lighten($brown, 5%);
  }
}

.radio-button {
  vertical-align: top;
  margin: 0.2em 0.15em 0 0.5em;
}

.rsvp-link, .submit-button {
  display: inline-block;
  color: $white;
  padding: 0.25em 0.8em;
  background-color: $tan;
  border-radius: 2em;
  line-height: 1;
  letter-spacing: 2px;
  cursor: pointer;
  margin: 0.5em 0 0 0;
}

.details-link {
  display: block;
  margin-top: 1em;
  text-decoration: underline;
  color: $tan;
}

.bride-and-groom {
  @include background-image('peanut-jellay', 'png');
  background-size: auto 200px;
  background-repeat: no-repeat;
  background-position: 50% 100%;
  display: block;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 200px;

  @media #{$phone} {
    width: calc(100% - 2em);
    background-size: 90% auto;
    height: 50vw;
  }
}
