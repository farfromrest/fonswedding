<h2 class="smaller-title">Confirm Your Gift</h2>
<p class="longer-text">We really appreciate the gift. Just want to give you a chance to review everything below before you pull the trigger.</p>

<%= form_tag gift_submit_path do %>
  <div class="form-field-row">
    <label class="large-label" for="amount">Who is this from?</label>
    <div class="fake-text-field">
      <%= @name %>
      <%= hidden_field_tag :name, @name %>
    </div>
  </div>
  <div class="form-field-row">
    <label class="large-label" for="amount">Email for reciept</label>
    <div class="fake-text-field">
      <%= @email %>
      <%= hidden_field_tag :email, @email %>
    </div>
  </div>
  <div class="form-field-row">
    <label class="large-label" for="amount">Amount</label>
    <div class="fake-text-field">
      $<%= @amount %>
      <%= hidden_field_tag :amount, @amount %>
    </div>
  </div>
  <div class="form-field-row">
    <label class="large-label" for="amount">Credit Card</label>
    <div class="fake-text-field">
      <%= @cc_brand %> ending in <%= @cc_last4 %>
    </div>
  </div>

  <%= hidden_field_tag :stripeToken, @stripeToken %>
  <%= hidden_field_tag :message, @message %>

  <%= submit_tag 'Process Payment', class: 'submit-button' %>

<% end %>
